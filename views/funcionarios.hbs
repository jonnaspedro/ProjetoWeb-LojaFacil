<section class="page-content">
  <h1>Funcionários Cadastrados</h1>

  <form action="/funcionarios" method="POST" class="form-funcionario">
    <input type="text" name="nome" placeholder="Nome do funcionário" required>
    <input type="text" name="cargo" placeholder="Cargo" required>
    <button type="submit" class="btn-adicionar">Adicionar Funcionário</button>
  </form>

  <table class="data-table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Cargo</th>
      </tr>
    </thead>
    <tbody>
      {{#each funcionarios}}
        <tr>
          <td>{{id}}</td>
          <td>{{nome}}</td>
          <td>{{cargo}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>

  <a href="/" class="btn-voltar">Voltar</a>
</section>

<style>
  .page-content {
    padding: 50px 20px;
    text-align: center;
  }

  .form-funcionario {
    margin-bottom: 40px;
  }

  input {
    padding: 10px 14px;
    border: 1px solid #ccc;
    border-radius: 6px;
    margin-right: 10px;
    font-size: 15px;
  }

  .btn-adicionar {
    background-color: #333;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    transition: 0.3s;
  }

  .btn-adicionar:hover {
    background-color: #ffd369;
    color: #000;
    transform: translateY(-2px);
  }

  table {
    margin: 0 auto;
    border-collapse: collapse;
    width: 85%;
    background-color: #fff;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.08);
  }

  th, td {
    padding: 14px 18px;
    border-bottom: 1px solid #eee;
    text-align: center;
  }

  th {
    background-color: #333;
    color: #fff;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  tr:hover td {
    background-color: #fdf8e6;
  }

  .btn-voltar {
    display: inline-block;
    margin-top: 30px;
    background-color: #333;
    color: white;
    text-decoration: none;
    padding: 10px 20px;
    border-radius: 6px;
    transition: 0.3s;
  }

  .btn-voltar:hover {
    background-color: #ffd369;
    color: #000;
    transform: translateY(-2px);
  }
</style>